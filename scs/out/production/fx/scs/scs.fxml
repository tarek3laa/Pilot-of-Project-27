<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.ListView?>
<GridPane
        style="-fx-background-color: #fff"
        xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="30" right="25" bottom="10" left="25"/>
    </padding>

    <ListView
            fx:id="commandCheckBoxList"
            GridPane.rowIndex="3"
            GridPane.columnIndex="0"
            style="-fx-border-color: #fff;-fx-font-size: 20"
            GridPane.columnSpan="10"/>

    <Button
            GridPane.columnIndex="12"
            GridPane.rowIndex="3"
            text="Send"
            fx:id="sendButton"
            wrapText="true"
            defaultButton="true"

    />

    <VBox
            GridPane.columnIndex="0"
            GridPane.rowIndex="6"
            style="-fx-background-color: black"
            minHeight="2"
            minWidth="200"
            GridPane.columnSpan="2"
            maxWidth="Infinity"
            maxHeight="2"
    />
    <Label
            GridPane.rowIndex="6"
            GridPane.columnIndex="3"
            text="Log"

    />
    <VBox
            GridPane.columnIndex="5"
            GridPane.rowIndex="6"
            style="-fx-background-color: black"
            minHeight="2"
            minWidth="200"
            GridPane.columnSpan="2"
            maxWidth="Infinity"
            maxHeight="2"
    />

    <ListView
            fx:id="ackList"
            GridPane.rowIndex="8"
            GridPane.columnIndex="0"
            style="-fx-border-color: #fff"
            GridPane.columnSpan="10"/>

</GridPane>